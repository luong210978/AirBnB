<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    tools:context=".View.Payment.PaymentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppBarLayoutTheme">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                app:layout_collapseMode="parallax">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/room_iv"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginHorizontal="28dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/room_1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ConnerRadius10">
                </com.google.android.material.imageview.ShapeableImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginRight="28dp"
                    android:layout_toRightOf="@+id/room_iv">
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Căn hộ cao cấp ven biển hồ"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/location_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/price_layout"
                        android:layout_marginBottom="10dp"
                        android:text="Khu du lịch sinh thái Bắc Tây Nguyên, Pleyku, Gia Lai"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                    <LinearLayout
                        android:id="@+id/price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/rate_layout"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500.000"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_unit"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginLeft="10dp"
                            android:textSize="12sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rate_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_star_24"
                            app:tint="@color/colorAccent" />
                        <TextView
                            android:id="@+id/rate_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rate"
                            android:paddingStart="5dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryText"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"/>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:backgroundTint="@color/colorBackground"
                android:background="@color/colorBackground"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="16dp"
                android:text="@string/price_detail"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/description_cv"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="14dp"
                        android:layout_marginBottom="14dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="500.000 x 2 ngày"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"/>
                        <TextView
                            android:id="@+id/roomPrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="1.000.000"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="14dp"
                        android:layout_marginBottom="14dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/service_price"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"/>
                        <TextView
                            android:id="@+id/servicePrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="0"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="14dp"
                        android:layout_marginBottom="14dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/cleaning_price"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"/>
                        <TextView
                            android:id="@+id/cleaningPrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="0"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="14dp"
                        android:layout_marginBottom="14dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/total_price"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryText"/>
                        <TextView
                            android:id="@+id/totalPrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="1.000.000"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"/>

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:layout_marginTop="14dp"
                        android:text="@string/payment_method"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:id="@+id/visa_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/visa_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="@string/visa"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"
                            app:icon="@drawable/ic_visa"
                            app:iconTint="#132BAE"
                            app:iconSize="38dp"
                            android:gravity="left|center"
                            app:iconPadding="14dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <ImageView
                            android:id="@+id/visaTick_iv"
                            android:visibility="invisible"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/ic_round_done_24"
                            app:tint="@color/colorGreen"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/payPal_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/payPal_btn"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="@string/pay_pal"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"
                            app:icon="@drawable/paypal"
                            app:iconSize="26dp"
                            app:iconTint="@color/colorNull"
                            app:iconTintMode="add"
                            android:gravity="left|center"
                            app:iconPadding="26dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        <ImageView
                            android:id="@+id/payPalTick_iv"
                            android:visibility="invisible"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/ic_round_done_24"
                            app:tint="@color/colorGreen"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/atm_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/atm_btn"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="@string/atm"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryText"
                            app:icon="@drawable/ic_atm_sign"
                            app:iconSize="24dp"
                            app:iconTint="@color/colorNull"
                            app:iconTintMode="add"
                            android:gravity="left|center"
                            app:iconPadding="26dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <ImageView
                            android:id="@+id/atmTick_iv"
                            android:visibility="invisible"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/ic_round_done_24"
                            app:tint="@color/colorGreen"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chooseMethod_btn"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="@string/choose_another_method"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/colorPrimaryText"
                        app:cornerRadius="10dp"
                        android:shadowColor="@color/colorNull"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="70dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/pay"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:cornerRadius="10dp">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>