<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".View.CreationRating.CreationRatingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarLayoutTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorBackground"
            android:background="@color/colorBackground">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/point_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="38dp"
        android:paddingHorizontal="28dp"
        app:layout_collapseMode="parallax"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:text="Độ chính xác"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/precision_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:progressBackgroundTint="@color/colorBlack"
                    android:secondaryProgressTint="@color/colorAccent"
                    android:progressTint="@color/colorAccent"
                    android:isIndicator="false"
                    android:stepSize="1"
                    android:rating="5"
                    android:clickable="true"
                    android:numStars="5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:text="Tiện nghi"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/convenience_rb"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/colorBlack"
                    android:progressTint="@color/colorAccent"
                    android:rating="5"
                    android:secondaryProgressTint="@color/colorAccent"
                    android:stepSize="1" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:text="Vị trí"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/location_rb"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/colorBlack"
                    android:progressTint="@color/colorAccent"
                    android:rating="5"
                    android:secondaryProgressTint="@color/colorAccent"
                    android:stepSize="1" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:text="Giá cả"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/price_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:progressBackgroundTint="@color/colorBlack"
                    android:secondaryProgressTint="@color/colorAccent"
                    android:progressTint="@color/colorAccent"
                    android:stepSize="1"
                    android:rating="5"
                    android:isIndicator="false"
                    android:numStars="5"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:weightSum="40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:text="Thái độ"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="21"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/attitude_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:progressBackgroundTint="@color/colorBlack"
                    android:secondaryProgressTint="@color/colorAccent"
                    android:progressTint="@color/colorAccent"
                    android:isIndicator="false"
                    android:stepSize="1"
                    android:rating="5"
                    android:numStars="5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:drawablePadding="10dp"
        android:layout_below="@+id/point_layout"
        android:paddingLeft="28dp"
        android:text="Cảm nhận của bạn"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rating_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginHorizontal="28dp"
        app:hintEnabled="false"
        android:backgroundTint="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rating_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="6"
            android:scrollbars="vertical"
            android:hint="Tôi thấy rằng ..."
            android:inputType="textMultiLine"
            android:gravity="top|left"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/completed_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="30dp"
            android:text="@string/completed"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:cornerRadius="10dp">

        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>
</RelativeLayout>